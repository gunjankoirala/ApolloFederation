{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "./",
    "noEmit": true,
    "paths":{
      "@Error":["src/utils/error.ts"],
      "@Schema":["drizzle/schema.ts"],
      "@Database":["src/utils/db.ts"],
      "@Service/*":["src/service/*"],
      "@GraphQl/*":["src/graphql/*"]
    }
  },
  "include": ["src", "drizzle", "drizzle.config.ts"],
  "ts-node": {
  "esm": true,
  "experimentalSpecifierResolution": "node"
}

}



